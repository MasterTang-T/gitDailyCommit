{
	"name": "gitlog-mate",
	"version": "1.0.0",
	"description": "Git 日志助手 - 帮助开发者从多个本地 Git 仓库获取提交日志，生成日报/周报",
	"main": "dist-electron/main.js",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc && vite build",
		"preview": "vite preview",
		"build:exe": "vue-tsc && vite build && electron-builder"
	},
	"dependencies": {
		"@ant-design/icons-vue": "^7.0.1",
		"ant-design-vue": "^4.2.6",
		"dayjs": "^1.11.13",
		"pinia": "^2.2.6",
		"vue": "^3.5.13"
	},
	"devDependencies": {
		"@types/node": "^22.10.5",
		"@vitejs/plugin-vue": "^5.2.1",
		"electron": "^33.4.11",
		"electron-builder": "^25.1.8",
		"typescript": "^5.7.3",
		"vite": "^6.0.7",
		"vite-plugin-electron": "^0.28.8",
		"vite-plugin-electron-renderer": "^0.14.6",
		"vue-tsc": "^2.2.0"
	},
	"build": {
		"appId": "com.gitlogmate.app",
		"productName": "GitLog Mate",
		"directories": {
			"output": "release"
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "public/icon.ico"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"installerLanguages": [
				"zh_CN",
				"en_US"
			],
			"language": "2052"
		},
		"files": [
			"dist/**/*",
			"dist-electron/**/*"
		]
	}
}